<div class="product-reviews">
<% @comments.each do |comment| %>
    <div class="row review-data">
        <hr>
        <p>
            <%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small>
            <% if signed_in? && current_user.admin? %>
            <%= link_to ('<i class="fas fa-minus-circle"></i>').html_safe, product_comment_path(@product, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </p>
        <div class="rated" data-score="<%= comment.rating %>"></div>
        <div><%= comment.body %></div>
    </div>
<% end %>
</div>