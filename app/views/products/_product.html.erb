
    <div class="col-xs-12 col-md-3 product-box">
        <div class = 'product-title'>
            <a href="#"><span><%= product.name %></span></a>
        </div>
      <%= image_tag(product.image_url, class: "img-fluid") if product.image_url %>
      <p> Description: <%= product.description %></p>
      <p> Colour: <%= product.colour %></p>
      <p> Price: $ <%= product.price %></p>
      <div class = 'buttons'>
        <p class = 'action'><%= link_to 'Show', product %></p>
        <p class = 'action'><%= link_to 'Edit', edit_product_path(product) %></p>
        <p class = 'action'><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div><!-- /col -->
