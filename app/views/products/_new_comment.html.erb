<% if signed_in? %>
<span>Add a review:</span>
<%= form_for([@product, @product.comments.build]) do |f| %>
  <p>
    <%= f.label :body, "Comment" %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :rating %><br>
    <%= f.text_field :rating, class: "rating" %>
  </p>  
  <p>
    <%= f.submit "Submit", id: "review-submit" %>
  </p>
<% end %>
<% end %>