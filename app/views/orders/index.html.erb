<div class="row order">
<% @orders.each do |order| %>
  <div class="col-sm order-item">
    <h1>
      Order # <%= order.id %>:
      <%= link_to order.product.name, order %>
    </h1>
    <p><%= order.product.description %></p>
    <strong>$ <%= order.product.price %></strong>
  </div><!-- /col -->
<% end %>
</div>